@model cloudscribe.Pagination.Models.PagedResult<Library.Data.ApplicationUser>


@{
    Layout = "_Layout";
    ViewData["Controller"] = "Accounts";
    ViewData["Action"] = "Index";
}


<table class="table table-striped table-bordered mb-4">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Data)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td class="btn-block text-center">
                    <button class="btn btn-primary"><i class="fas fa-edit"></i></button>
                    <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                    <button class="btn btn-info"><i class="fas fa-info-circle"></i></button>
                </td>
            </tr>
        }
    </tbody>

</table>


<div class="text-center d-flex justify-content-center align-items-center">
    <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
</div>
