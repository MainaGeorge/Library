@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a href="#" class="nav-link">@UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">
            <form asp-action="Logout" asp-controller="Accounts" method="post" class="form-inline">
                <button type="submit" class="text-dark nav-link btn">Log out</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Accounts">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Accounts">Login</a>
        </li>
    }

</ul>