@{
    Layout = "_DataTableLayout";

}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="tableData" class="table table-striped table-dark table-bordered" width="100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script>
        var dataTable;

        $(document).ready(function () {
            LoadDataTable();
            const booksToBorrow = $("#books");

            console.log(booksToBorrow[0].innerHTML);
        });

        function LoadDataTable() {
            dataTable = $("#tableData").DataTable({
                pageLength: 8,
                "ajax": {
                    "processing": true,
                    "url": "/books/getall",
                    "type": "GET",
                    "datatype": "json",
                    "dataSrc": ""
                },

                "columns": [
                    { "data": "title", "name": "title", "autoWidth": true },
                    { "data": "author.firstName", "name": "author", "autoWidth": true },
                    {
                        "data": { isAvailable: "isAvailable", id: "id" },
                        "render": function (data, row) {
                            return `<div class="text-center">
                                    <a onclick=borrowBook("api/book/borrowBook/${data.id}") class='btn ${data.isAvailable ? 'btn-success' : 'btn-danger isDisabled'}'>
                                        Borrow
                                    </a>
                                    </div>`;
                        }
                    },
                    {
                        "data": { isAvailable: "isAvailable", id: "id" },
                        "render": function (data, row) {
                            return `<div class="text-center">
                                    <a onclick=returnBook("/api/book/returnBook/${data.id}") class='btn ${!data.isAvailable ? 'btn-success' : 'btn-danger isDisabled'}'>
                                        Return
                                    </a>
                                    </div>`;
                        }
                    }
                ]
            });
        }


        function borrowBook(url) {
            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload(null, false);
                        const booksToBorrow = $("#books");
                        const value = parseInt(booksToBorrow[0].innerHTML) + 1;
                        booksToBorrow[0].innerHTML = value;
                        swal({
                            title: "success",
                            text: data.message,
                            type: "success",
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "Ok",
                            closeOnConfirm: true
                        });
                    } else {
                        alert(data.message);
                    }
                }
            });
        }

        function returnBook(url) {
            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    if (data.success) {
                        dataTable.ajax.reload(null, false);
                        swal({
                            title: "success",
                            text: data.message,
                            type: "success",
                            confirmButtonColor: "#DD6B55",
                            confirmButtonText: "Ok",
                            closeOnConfirm: true
                        });

                    } else {
                        alert(data.message);
                    }
                }
            });
        }
    </script>
}

