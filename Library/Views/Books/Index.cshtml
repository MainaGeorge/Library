@model cloudscribe.Pagination.Models.PagedResult<Library.Entities.Book>


@{
    Layout = "_Layout";
    ViewData["Controller"] = "Books";
    ViewData["Action"] = "Index";
}


<table class="table table-striped table-bordered mb-4">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Data)
        {
            var disabled = !book.IsAvailable ? "isDisabled btn-danger" : "btn-success";
            var enabled = book.IsAvailable ? "isDisabled btn-danger" : "btn-success";

            <tr>
                <td>@book.Title</td>
                <td>@book.Author.FirstName @book.Author.LastName</td>
                <td>
                    <a id="@book.Id" onclick='borrowOrReturn("borrowBook", @book.Id)' class="btn btn-sm @disabled">Borrow</a>
                    <a id="@book.Id" onclick='borrowOrReturn("returnBook", @book.Id)' class="btn btn-sm @enabled }">Return</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<div class="text-center d-flex justify-content-center align-items-center">
    <partial name="_PaginationPartial" view-data="ViewData" model="Model" />
</div>

@section Scripts
{
    @* <script type="text/javascript" src="js/borrow.js"></script> *@
    <script>

        function borrowOrReturn(action, id) {
            const url = `https://localhost:44399/api/book/${action}/${id}`;

            $.ajax({
                type: "GET",
                url: url,
                success: function (data) {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert("fail");
                    }
                }
            });
        }

    </script>
}
