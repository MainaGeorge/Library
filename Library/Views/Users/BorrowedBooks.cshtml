@model IEnumerable<Library.Entities.Book>

@if (Model.Any())
{
    <table class="table table-striped table-bordered" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>Book</th>
                <th>IsAvailable</th>
                <th>Borrower</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.IsAvailable</td>
                    <td>@book.Borrower.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3 class="text-success">No one has borrowed any books yet!</h3>
}
